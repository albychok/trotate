body
    padding: 0
    margin: 0
    background: #ddd
.rotate-photos__list,
.rotate-photos__item
    margin: 0
    padding: 0
    list-style: none

.rotate
    position: relative
    width: 100%
    height: 100%
    text-align: center
    &-product
        padding-bottom: 140px
        height: 100%
        box-sizing: border-box
        &__content
            position: relative
            &-img
                max-width: 100%
                height: 100%
    &-photos
        width: 100%
        overflow: auto
        width: 100%
        bottom: 0px
        position: absolute
        height: 125px
        &__list
            display: inline-block
        &__item
            float: left
            margin: 0 20px 0 0
            &-link
                display: inline-block
                border: 2px solid #fff
                &_current, &:hover
                    border: 2px solid #7abb08

                &_360
                    position: relative
                    &:after
                        background: rgba(255, 255, 255, 0.8) url(../images/rotate/rotate_rotate.png) no-repeat 50% 50%
                        position: absolute
                        width: 100%
                        height: 100%
                        content: ""
                        top: 0
                        left: 0
            &-img
                display: block
                width: 140px
                height: 100px
    .rotate-full
        position: absolute
        right: 15px
        top: 15px
        &-link
            background: url('../images/rotate/rotate_sprite.png') no-repeat 0 0
            display: block
            width: 48px
            height: 48px
            &:hover
                background-position: -49px 0
